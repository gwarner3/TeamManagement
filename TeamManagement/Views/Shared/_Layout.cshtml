@using Microsoft.Ajax.Utilities
@using TeamManagement.Models
@model TeamManagement.ViewModels.LayoutViewModels
DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (Model.CurrentUser == null)
    {
        @Html.Partial("_AnonymousNavBar")
    }
    else
    {
        switch (Model.CurrentUser.Role)
        {
            case "Player":
                @Html.Partial("_PlayerNavBar")
                break;
            case "Coach":
                @Html.Partial("_CoachNavBar")
                break;
            case "Subscriber":
                @Html.Partial("_SubscriberNavBar")
                break;
            default:
                @Html.Partial("_AnonymousNavBar")
                break;
        }
    }
    <div class="container body-content">
        <div class="row">
            <div class="col-md-2 col-xs-12">
                @{
                    foreach (var game in Model.GameSchedule)
                    {
                        @game.GameDate.ToString("mm-dd")<br />

                    }
                }
            </div>

            <div class="col-md-8 col-xs-12">
                @RenderBody()
            </div>

            <div class="col-md-2 col-xs-12">
                <br />
