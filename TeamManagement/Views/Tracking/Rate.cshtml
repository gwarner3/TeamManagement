@model TeamManagement.Models.RatingModels
@{
    ViewBag.Title = "Rate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rate the player.</h2>


@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Rate from 1 - 5", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Rating, new { @class = "col-md-2 control-label" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}